[colors]
background = #08052b
background-alt = #373B41
foreground = #ffffff
#blue
#primary = #5294e2
#green
primary=#00B684
secondary = #8ABEB7
alert = #A54242
disabled = #707880

[bar/barplss]
width = 100%
height = 15pt
radius = 0

; dpi = 96

background = #1e222a
;${colors.background}
foreground = #c8ccd4
;${colors.foreground}

line-size = 3pt

border-size = 0pt
border-color = #00000000

