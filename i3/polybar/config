padding-right = 1

module-margin = 0

separator = |
separator-foreground = ${colors.disabled}

font-0 = source code pro;2
;font-0 = JetBrains Mono Medium;2
;xwindow
modules-left = xworkspaces 
modules-right = battery backlight pulseaudio memory cpu temperature wlan  date

cursor-click = pointer
cursor-scroll = ns-resize
